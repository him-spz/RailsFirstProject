
<% content_for :title, "Friends" %>
<% if user_signed_in? %>
  <table class = "table table-striped table-hover">
    <thead class = "thread-dark">
      <tr>
        <th>Full Name</th>
        <th>Email</th>
        <th>Phone</th>
        <th>Twitter</th>
        <th>User Id</th>
        <th></th>
      </tr>
    </thead>

    <tbody>
      <% @friends.each do |friend| %>
          <%= render friend %>
      <% end %>
    </tbody>
  </table>

  <%= link_to 'New Friend', new_friend_path, class:"btn btn-secondary" %>
<% else %>
  <h1>Hello World!</h1>
  This is my first rail website boom....
<%end%>



